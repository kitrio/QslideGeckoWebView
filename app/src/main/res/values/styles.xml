<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:alertDialogTheme">@style/customDialog</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
    </style>

    <style name="customDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/border</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:animation">@android:anim/fade_out</item>
    </style>

</resources>